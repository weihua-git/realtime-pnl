# HTX API 配置
HTX_ACCESS_KEY=your_access_key_here
HTX_SECRET_KEY=your_secret_key_here

# WebSocket 配置
# 永续合约 WebSocket 地址
WS_URL=wss://api.hbdm.com/linear-swap-notification

# Telegram Bot 配置（可选，延迟较高 3-15秒）
# 1. 在 Telegram 中搜索 @BotFather
# 2. 发送 /newbot 创建新机器人
# 3. 获取 Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 4. 在 Telegram 中搜索 @userinfobot
# 5. 发送任意消息获取你的 Chat ID
TELEGRAM_CHAT_ID=your_chat_id_here

# Bark 推送配置（推荐，iOS 专用，延迟 < 1秒）
# 1. 在 App Store 下载 "Bark" 应用
# 2. 打开应用，复制你的推送 Key（类似：xxxxxx）
# 3. 填写到下方
BARK_KEY=your_bark_key_here

# Bark 服务器地址（可选，默认使用官方服务器）
# 如果你自建了 Bark 服务器，可以修改此地址
BARK_SERVER=https://api.day.app


# ==================== Redis 配置 ====================
# Redis 主机地址（默认：127.0.0.1）
REDIS_HOST=127.0.0.1

# Redis 端口（默认：6379）
REDIS_PORT=6379

# Redis 数据库编号（0-15，默认：3）
REDIS_DB=3

# Redis 密码（如果没有密码则留空或注释掉）
# REDIS_PASSWORD=your_redis_password


# ==================== 日志配置 ====================
# 日志级别：ERROR, WARN, INFO, DEBUG, TRACE
# ERROR: 只显示错误
# WARN: 显示警告和错误
# INFO: 显示一般信息（默认，推荐）
# DEBUG: 显示调试信息
# TRACE: 显示所有详细信息
LOG_LEVEL=INFO


# ==================== Web 服务器配置 ====================
# Web 界面端口（默认：3000）
WEB_PORT=3000


# ==================== 量化交易配置 ====================
# 是否启用量化交易（true=启用，false=关闭）
QUANT_ENABLED=false

# 交易模式（true=测试模式/模拟交易，false=实盘模式/真实交易）
# ⚠️ 警告：实盘模式会使用真实资金！
QUANT_TEST_MODE=true

# 交易对
QUANT_SYMBOL=ETH-USDT

# 杠杆倍数
QUANT_LEVERAGE=5

# 测试模式初始资金（USDT）
QUANT_INITIAL_BALANCE=1000

# 每次开仓比例（0.1 = 10%）
QUANT_POSITION_SIZE=0.1

# 止损比例（0.02 = 2%）
QUANT_STOP_LOSS=0.02

# 止盈比例（0.05 = 5%）
QUANT_TAKE_PROFIT=0.05

# 移动止损比例（0.03 = 3%，从最高/最低点回撤3%平仓）
QUANT_TRAILING_STOP=0.03

# 最大同时持仓数
QUANT_MAX_POSITIONS=1

# 信号检查间隔（毫秒，默认：30000 = 30秒）
QUANT_SIGNAL_CHECK_INTERVAL=30000

# 最小信心指数（0-100，只有信心指数 >= 此值才会开仓）
# 60 = 保守（信号强度要求高）
# 50 = 适中
# 40 = 激进（更容易开仓）
QUANT_MIN_CONFIDENCE=60

# Maker 手续费率（默认：0.0002 = 0.02%）
QUANT_MAKER_FEE=0.0002

# Taker 手续费率（默认：0.0005 = 0.05%）
QUANT_TAKER_FEE=0.0005
